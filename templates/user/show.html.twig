{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>{{user.prenom}}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			{# <tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr> #}
			<tr>
				<th>Nom</th>
				<td>{{ user.Nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ user.Prenom }}</td>
			</tr>

			{% if user.Cours is not empty  %}
			<tr>
				<th>Cours suivis</th>
				<td>
					<ul>
						{% for cours in user.Cours %}
							<li> {{ cours.titre }}</li>
						{% endfor %}
					</ul>
				</td>
			</tr>
			{% endif %}
		</tbody>
	</table>
	<div class="d-flex">
		<a href="{{ path('app_user_index') }}" class="btn btn-secondary">back to list</a>
		{{ include('user/_delete_form.html.twig') }}
		<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary ">edit</a>
	</div>
{% endblock %}
